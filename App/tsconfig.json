{
    "extends": "expo/tsconfig.base",
    "compilerOptions": {
        "module": "commonjs",
        "target": "ESNext",
        "jsx": "react-native",
        "lib": ["DOM", "ESNext"],
        "allowJs": true,
        "noEmit": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "resolveJsonModule": true,
        "moduleResolution": "node",
        "strict": true
    },
    "include": ["./src/**/*", "app.config.js"]
}
